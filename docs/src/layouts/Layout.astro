---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - fluidity-ui docs</title>
	</head>
	<body>
        <Header />
        <main class="main">
            <slot />
        </main>
	</body>
</html>
<style is:global>
	:root {

	}

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
		font-family: system-ui, sans-serif;
		background: #13151a;
        color: #eee;
        font-size: 16px;
	}

    a {
        color: inherit;
        font-weight: bolder;
        font-family: monospace;
    }

    .main {
        max-width: 1280px;
        width: 100%;
        margin: auto;
        padding: 30px 20px;
    }
</style>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
    <div class="hero">
        <h1 class="hero_title">Building efficient interfaces with ease.</h1>
        <a class="hero_link" href="/docs/getting-started">Installation</a>
        <a class="hero_link" href="/docs/getting-started">Examples</a>
    </div>
</Layout>

<style>
    .hero {
        padding: 20px 10px;
    }

    .hero .hero_title {
        font-size: 2.5rem;
    }

    .hero .hero_link {
        display: block;

        width: fit-content;
        margin: 10px 0;

        font-size: 1.2rem;
    }

    .hero .hero_link::before {
        content: '> ';
    }
</style>
